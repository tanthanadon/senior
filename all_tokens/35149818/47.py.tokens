class Solution ( object ) :      def minDistance ( self , word1 , word2 ) :          if not word1 and not word2 :              return 0  if not word1 or not word2 :              return len ( word1 ) or len ( word2 )  prev_row = [ i for i in xrange ( len ( word1 ) + 1 ) ] for row in xrange ( 1 , len ( word2 ) + 1 ) :              cur_row = [ row ] for col in xrange ( 1 , len ( word1 ) + 1 ) :                  if word1 [ col - 1 ] == word2 [ row - 1 ] :                      cur_row . append ( prev_row [ col - 1 ] )  else :                      cur_row . append ( min ( min ( cur_row [ col - 1 ] , prev_row [ col ] ) , prev_row [ col - 1 ] ) + 1 )   prev_row = cur_row  return cur_row [ - 1 ]    