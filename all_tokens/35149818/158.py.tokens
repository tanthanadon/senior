class Solution :      def twoSumClosest ( self , nums , target ) :          if not nums or len ( nums ) < 2 :              return 0  nums . sort ( ) begin , end , result = 0 , len ( nums ) - 1 , float ( <str> ) while begin < end :              cur_sum = nums [ begin ] + nums [ end ] if cur_sum == target :                  return 0  result = min ( abs ( cur_sum - target ) , result ) if cur_sum > target :                  end -= 1  else :                  begin += 1   return result    